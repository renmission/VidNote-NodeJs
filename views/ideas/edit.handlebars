<div class="card card-body mt-5">

    <h3>Edit Video Idea</h3>
    <form action="/ideas/edit/{{idea.id}}?_method=PUT" method="post">
        <div class="form-group">
            <label for="">Title:</label>
            <input value="{{idea.title}}" type="text" name="title" id="" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="">details:</label>
            <textarea class="form-control" name="details" id="" cols="30" rows="10" required>{{idea.details}}</textarea>
        </div>

        <input type="submit" value="Update" class="btn btn-primary">

    </form>
</div>